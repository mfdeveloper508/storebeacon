    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Aisle Information
      </h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Aisle Information</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <br/>
      <br/>
      <div class="row">
        <div class="col-md-1"> </div>
        <div class="col-md-10">
          <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <br/>
            <br/>
            <form id="aisle_register_form" class="form-horizontal" action="/aisle/register/" method="POST">
              <div class="box-body">
                <div class="form-group">
                  <label for="inputStoreTitle" class="col-sm-3 control-label">Name</label>
                  <div class="col-sm-7">
                    <input type="text" class="form-control" name="name" placeholder="Name" {{if .Aisle}}value="{{.Aisle.Name}}"{{end}}>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputStoreDescription" class="col-sm-3 control-label">Description</label>
                  <div class="col-sm-7">
                    <textarea rows="4" name="description" placeholder="Description" style="width: 100%;">{{if .Aisle}}{{.Aisle.Description}}{{end}}</textarea>
                  </div>
                </div>
              <input type="hidden" class="form-control" name="aisleId" id="aisleId" value="{{if .Aisle}}{{.Aisle.ID}}{{else}}0{{end}}"/>
              <input type="hidden" class="form-control" name="storeId" id="storeId" {{if .StoreID}}value="{{.StoreID}}"{{end}}/>
              <div class="box-footer">
                <div class="col-sm-offset-3 col-sm-7" data-toggle="modal" data-target="#modal-edit">
                    <button type="button" class="btn btn-info">Save</button>
                </div>
              </div>
            </form>

            <br/>
            <br/>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

        <div class="modal modal-info fade" id="modal-edit">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Are you correct the information?</h4>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-outline" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-outline" id="aisle_register_submit" data-dismiss="modal">Ok</button>
              </div>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->

    </section>